[user]
	name = Alexandre-Silva
	email = alexandre.s.silva@posteo.net

[status]
	submoduleSummary = true

[diff]
	submodule = log

[core]
	excludesfile = ~/.gitignore_global
	editor = vi # fallback, by default uses $GIT_EDITOR
	autocrlf = input

[merge]
	tool = kdiff3
	conflictstyle = diff3

[push]
	default = simple

[pull]
	rebase = preserve

# Allow local customizations in the .gitconfig_local file
[include]
	path = ~/.gitconfig_local

[alias]
	spull   = "! __git_spull() { git pull \"$@\" && git submodule sync --recursive && git submodule update --init --recursive; }; __git_spull"
	aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /' | sort
	recap   = "! git log --all --oneline --no-merges --author=\"$(git config user.name)\""
	today   = "! git log --since=00:00:00 --all --no-merges --oneline --author=\"$(git config user.name)\""
	local   = "! git log --oneline --no-merges \"$(git rev-parse --abbrev-ref --symbolic-full-name @{u})\"..HEAD"
    oldest-ancestor = !zsh -c 'diff --old-line-format='' --new-line-format='' <(git rev-list --first-parent "${1:-master}") <(git rev-list --first-parent "${2:-HEAD}") | head -1' -
	stsh    = stash --keep-index
	staash  = stash --include-untracked
	staaash = stash --all

[color]
	ui = true
	status = auto
	diff = auto
	interactive = auto

[grep]
	lineNumber = true

[color "grep"]
	match = cyan bold
	selected = blue
	context = normal
	filename = magenta
	linenumber = green
	separator = yellow
	function = blue
	branch = auto

[pager]
	pager = diff-so-fancy | less --tabs=1,5 -RFX
	diff = diff-so-fancy | less --tabs=1,5 -RFX

[diff "color"]
	textconv=pygmentize

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

[log]
	follow = true

[fetch]
	prune = true

[diff "pandoc2md"]
	textconv=pandoc --to=markdown
	cachetextconv = true

[diff "odf2txt"]
	textconv=odt2txt --raw-input
	cachetextconv = true

[diff "spreadsheet2csv"]
	textconv=spreadsheet2csv
	cachetextconv=true
