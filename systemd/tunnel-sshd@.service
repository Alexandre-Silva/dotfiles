[Unit]
Description=Creates and maintains a reverse ssh tunnel for SSH access to this machine via %I
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/autossh -NT -M 0 -o "ServerAliveInterval 30" -o "ServerAliveCountMax 3" -R '*:2224:localhost:22' %i
Restart=always
RestartSec=15

[Install]
WantedBy=multi-user.target