# misc funcs for nothing and everything

# movess "file" to dotfiles/"file"
function dot-mv () {
    dot_fname=$(basename $1)

    if [[ ${dot_fname[1]} == '.' ]]; then
	    dot_fname=${dot_fname[2,-1]}
    else
	    dot_fname=${dot_fname}
    fi

    mv --interactive $1 ~/dotfiles/$dot_fname
    ln --symbolic ~/dotfiles/$dot_fname $1

}

# Initial startup script, kills xfce-panel 
# and inits firefoz thunderbird ....
#
function alex-init () {
    pkill xfce4-panel 

    sleep 0.2
    echo 'customization.orig.restart()' | awesome-client

    thunderbird & disown
    firefox & disown
    skype & disown
    pkill xfsettingsd && xfsettingsd
    { sleep 10 && kinit } & disown  

}
